@model AEOnline.Models.Auto
@{
    ViewBag.Title = "FichaAuto";

    Layout = "~/Views/Shared/_LayoutAdminFlota2.cshtml";

    string rol = "";

    if (Session["Rol"] != null)
    {
        rol += Session["Rol"].ToString();
    }

    if (rol != "AdminDeFlota")
    {
        Response.Redirect("~/Login/Index");
    }
}

<!DOCTYPE html>
<html lang="en">

<body>
    <div class="card-header">
        <i class="fa fa-table"></i> Ficha del vehículo "@Model.NombreVehiculo"
    </div>

    <!-- Nav tabs -->
    <ul class="nav nav-tabs nav-justified">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#panel1" role="tab">Datos generales</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#panel2" role="tab">Cargas de combustible</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#panel3" role="tab">Mantenciones</a>
        </li>
    </ul>
    <!-- Tab panels -->
    <div class="tab-content card">
        <!--Panel 1-->
        <div class="tab-pane fade in show active" id="panel1" role="tabpanel">
            <br>
            @Html.Partial("~/Views/AdminFlota2/_AutoDatosGenerales.cshtml", Model)
        </div>
        <!--/.Panel 1-->
        <!--Panel 2-->
        <div class="tab-pane fade" id="panel2" role="tabpanel">
            <br>
            @Html.Partial("~/Views/AdminFlota2/_AutoHistorialesCombustible.cshtml", (List<AEOnline.Models.HistorialCargaCombustible>)ViewBag.CargasCombustible)
        </div>
        <!--/.Panel 2-->
        <!--Panel 3-->
        <div class="tab-pane fade" id="panel3" role="tabpanel">
            <br>
            @Html.Partial("~/Views/AdminFlota2/_AutoHistorialesMantencion.cshtml", (List<AEOnline.Models.HistorialMantencion>)ViewBag.Mantenciones)
        </div>
        <!--/.Panel 3-->
    </div>
</body>
</html>



