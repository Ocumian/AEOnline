@model AEOnline.Models.WebModels.CreacionOperador

@{
    ViewBag.Title = "AgregarOperador";

    Layout = "~/Views/Shared/_LayoutAdminFlota2.cshtml";

    string rol = "";

    if (Session["Rol"] != null)
    {
        rol += Session["Rol"].ToString();
    }

    if (rol != "AdminDeFlota")
    {
        Response.Redirect("~/Login/Index");
    }
}

<body class="bg-dark">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="container">
            <div class="card card-register mx-auto mt-5">
                <div class="card-header">Crear nuevo Operador</div>
                <div class="card-body">
                    <form>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <div class="form-row">
                                <div class="col-md-6">
                                    <p>Nombre</p>
                                    @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-6">
                                    <p>Tipo de licencia</p>
                                    @Html.EditorFor(model => model.TipoLicencia, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.TipoLicencia, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="form-row">
                                <div class="col-md-6">
                                    <p>Usuario asignado</p>
                                   @Html.DropDownList("UsuarioId", null, htmlAttributes: new { @class = "form-control", @id = "cmbUsuario" })
                                </div>
                                <div class="col-md-6">
                                    <p>Auto asignado</p>
                                    @Html.DropDownList("AutoId", null, htmlAttributes: new { @class = "form-control", @id = "cmbAuto" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Crear nuevo operador" class="btn btn-primary btn-block" />
                        </div>
                    </form>
                    <div class="text-center">
                        <a class="d-block small mt-3" href="@Url.Action("AdministrarOperadores","AdminFlota2")"><< Regresar a la lista</a>
                    </div>
                </div>
            </div>
        </div>
    }

</body>


