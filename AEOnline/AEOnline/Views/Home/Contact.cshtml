@{
    ViewBag.Title = "Contact";
}



<canvas id="myChart"></canvas>


<script>
    var speedCanvas = document.getElementById("myChart").getContext('2d');

    //Chart.defaults.global.defaultFontFamily = "Lato";
    Chart.defaults.global.defaultFontSize = 15;

    var speedData = {
        labels: [new Date(2018, 1, 1, 5, 4, 22), new Date(2018, 1, 1, 8, 10, 44), new Date(2018, 1, 1, 10, 53, 2), new Date(2018, 1, 1, 11, 22, 33), new Date(2018, 1, 1, 16, 15,14)],
        datasets: [{
            label: "Velocidad",
            data: [0, 59, 75, 20, 20],
            lineTension: 0.1, //0.25, suavidad de la linea
            fill: false,
            borderColor: 'orange',
            backgroundColor: 'transparent',
            pointBorderColor: 'orange',
            pointBackgroundColor: 'rgba(255,150,0,0.5)',
            borderDash: [0,0], //[5, 5], punteado
            pointRadius: 5,
            pointHoverRadius: 10,
            pointHitRadius: 30,
            pointBorderWidth: 2,
            pointStyle: 'rectRounded'
        }]
    };

    var chartOptions = {
        title: {
            display: true,
            text: 'Velocidad del auto durante el día',
            fontSize: 25
        },
        legend: {
            display: true,
            position: 'top',
            labels: {
                boxWidth: 80,
                fontColor: 'black'
            }
        },
        scales: {
            xAxes: [{
                type: "time",               
                time: {
                    unit: 'minute',
                    stepSize: 60,
                    //round: 'hour',
                    tooltipFormat: "h:mm:ss a",
                    displayFormats: {
                        hour: 'MMM D, h:mm A',
                    }  
                    ,
                    //min: new Date(2018, 1, 1, 0, 0, 0),
                    max: new Date(2018, 1, 1, 16, 45, 14) //Usar valor maximo + media hora
                }
            }],
            yAxes: [{
                gridLines: {
                    color: "black",
                    borderDash: [2, 5],
                },
                scaleLabel: {
                    display: true,
                    labelString: "Velocidad en Kilometros por Hora",
                    fontColor: "green"
                }
            }]
        }
    };

    var lineChart = new Chart(speedCanvas, {
        type: 'line',
        data: speedData,
        options: chartOptions
    });
</script>
